<header>
  <nav class="navbar navbar-expand-md bg-dark">
    <a class="navbar-brand text-light" style="font-family: 'Black Ops One', sans-serif;" href="/">BATTLESHIP</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon text-light"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><a class="nav-link text-light" href="/newgame">New Game</a></li>
        <li class="nav-item"><a class="nav-link text-light" href="/leaderboard">Leaderboard</a></li>
      </ul>
      <% if (user) { %>
      <span class="mr-4 text-light">Welcome, <%= user.name %>!</span>
      <form class="form-inline" action="/logout" method="POST">
      <% } %>
      <% if (!user) { %>
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link text-light" href="/">Register</a></li>
            <li class="nav-item"><a class="nav-link text-light" href="/">Login</a></li>
          </ul>
      <% } else { %>
        <button type="submit" class="btn btn-secondary">Logout</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>