<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Black+Ops+One&display=swap" rel="stylesheet">
  <title>Document</title>
</head>
<body>
   <%- include('./partials/_header') %>

  <main>
      <div class="container">
          <div class="row justify-content-md-center">
            <div class="card col-lg-5 m-2">
              <div class="card-body">
                <h5 class="card-title" style="font-family: 'Black Ops One', sans-serif; text-align: center;">GAME OPTIONS</h5>
                <form action="/games" method="POST">
                  <div class="form-group">
                    <label for="boardSize">Board Size</label>
                    <select class="form-control" name="boardSize">
                      <option>10</option>
                      <option>11</option>
                      <option>12</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="shipCount">Ships per Player</label>
                    <select class="form-control" name="shipCount">
                      <option>5</option>
                      <option>6</option>
                      <option>7</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="shotPerTurn">Shots per Turn</label>
                    <select class="form-control" name="shotsPerTurn">
                        <option>1</option>
                        <option>2</option>
                      </select>
                  </div>
                  <div class="form-group">
                    <label for="smartPC">Computer Difficulty</label>
                    <select class="form-control" name="smartPC">
                        <option value="false">Dumb</option>
                        <option value="true">Smart</option>
                      </select>
                  </div>
                  <div class="col-lg-5 mx-auto my-5" style="text-align: center;">
                      <button type="submit" class="btn btn-primary">Place Ships</button>
                  </div>
                </form>
              </div>
            </div>
        </div>
  </main>

   <!-- Bootstrap JS -->
   <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script> 
</body>
</html>